<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantOrderManagement.Pages.AddOrders"
             Title=""
             BackgroundColor="Beige">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Geri Dön Butonu -->
        <Button Text="← Geri Dön"
                Grid.Row="0"
                BackgroundColor="#8B4513"
                TextColor="White"
                CornerRadius="5"
                Padding="15,10"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="0,0,0,10"
                Clicked="OnBackButtonClicked"/>

        <Border Grid.Row="1"
                StrokeThickness="1"
                Stroke="#D4A574"
                Background="White"
                StrokeShape="RoundRectangle 10"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                MaximumWidthRequest="800"
                MinimumHeightRequest="600">

            <Grid Padding="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Başlık -->
                <Label Text="Sipariş Ekle"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#8B4513"
                       HorizontalOptions="Center"
                       Margin="0,10,0,25"
                       Grid.Row="0"/>

                <!-- Masa Seçimi -->
                <VerticalStackLayout Grid.Row="1" Spacing="10" Margin="0,0,0,20">
                    <Label Text="Masa Seçin"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#8B4513"/>
                    <Picker x:Name="TablePicker"
                            Title="Masa seçiniz..."
                            BackgroundColor="#F5F5F5"
                            TextColor="#333"
                            HeightRequest="45"/>
                </VerticalStackLayout>

                <!-- Ürünler Tablosu -->
                <Border Grid.Row="2" 
                        StrokeThickness="1"
                        Stroke="#D4A574"
                        StrokeShape="RoundRectangle 8"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Tablo Başlıkları -->
                        <Grid Grid.Row="0" Padding="15,12" BackgroundColor="#F5E6D3" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="Ürün Adı" 
                                   Grid.Column="0" 
                                   FontAttributes="Bold" 
                                   TextColor="#8B4513" 
                                   VerticalTextAlignment="Center"
                                   FontSize="14"/>
                            <Label Text="Fiyat" 
                                   Grid.Column="1" 
                                   FontAttributes="Bold" 
                                   TextColor="#8B4513" 
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   FontSize="14"/>
                            <Label Text="İşlemler" 
                                   Grid.Column="2" 
                                   FontAttributes="Bold" 
                                   TextColor="#8B4513" 
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center"
                                   FontSize="14"/>
                        </Grid>

                        <!-- Ürünler Listesi -->
                        <ScrollView Grid.Row="1">
                            <CollectionView x:Name="ProductsCollectionView">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="15,12" BackgroundColor="White" ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>

                                            <Label Text="{Binding Name}" 
                                                   Grid.Column="0" 
                                                   VerticalOptions="Center"
                                                   FontSize="14"
                                                   TextColor="#333"/>

                                            <Label Text="{Binding Price, StringFormat='{0:C}'}" 
                                                   Grid.Column="1" 
                                                   VerticalOptions="Center" 
                                                   HorizontalTextAlignment="Center"
                                                   FontSize="14"
                                                   TextColor="#333"/>

                                            <HorizontalStackLayout Grid.Column="2" 
                                                                   Spacing="8"
                                                                   HorizontalOptions="Center"
                                                                   VerticalOptions="Center">

                                                <!-- Ekle Butonu -->
                                                <Border BackgroundColor="#4CAF50"
                                                        Stroke="Transparent"
                                                        StrokeShape="RoundRectangle 5"
                                                        Padding="12,6">
                                                    <Label Text="Ekle" 
                                                           TextColor="White"
                                                           FontSize="12"
                                                           FontAttributes="Bold">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.AddProductCommand}"
                                                                                CommandParameter="{Binding}"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                </Border>

                                                <!-- Çıkar Butonu -->
                                                <Border BackgroundColor="#F44336"
                                                        Stroke="Transparent"
                                                        StrokeShape="RoundRectangle 5"
                                                        Padding="12,6">
                                                    <Label Text="Çıkar" 
                                                           TextColor="White"
                                                           FontSize="12"
                                                           FontAttributes="Bold">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveProductCommand}"
                                                                                CommandParameter="{Binding}"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                </Border>
                                            </HorizontalStackLayout>

                                            <BoxView Grid.ColumnSpan="3" 
                                                     HeightRequest="1" 
                                                     Color="#E0E0E0" 
                                                     VerticalOptions="End"
                                                     Margin="0,12,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </Grid>
                </Border>

                <!-- Alt Butonlar -->
                <Grid Grid.Row="3" ColumnSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Text="İptal"
                            Grid.Column="0"
                            BackgroundColor="#9E9E9E"
                            TextColor="White"
                            CornerRadius="8"
                            Padding="0,12"
                            FontSize="16"
                            FontAttributes="Bold"
                            Command="{Binding CancelCommand}"/>

                    <Button Text="Siparişi Kaydet"
                            Grid.Column="1"
                            BackgroundColor="#8B4513"
                            TextColor="White"
                            CornerRadius="8"
                            Padding="0,12"
                            FontSize="16"
                            FontAttributes="Bold"
                            Command="{Binding SaveOrderCommand}"/>
                </Grid>

            </Grid>
        </Border>
    </Grid>

</ContentPage>