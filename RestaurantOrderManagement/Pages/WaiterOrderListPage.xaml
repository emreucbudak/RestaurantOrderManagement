<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantOrderManagement.Pages.WaiterOrderListPage"
             Title="" BackgroundColor="Beige">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Text="← Geri Dön"
                Grid.Row="0"
                BackgroundColor="#8B4513"
                TextColor="White"
                CornerRadius="5"
                Padding="15,10"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="0,0,0,10"
                Clicked="OnBackButtonClicked"/>

        <ScrollView Grid.Row="1" 
                    Orientation="Horizontal"
                    HorizontalScrollBarVisibility="Always">
            <Border StrokeThickness="1"
                    Stroke="#D4A574"
                    Background="White"
                    StrokeShape="RoundRectangle 10"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    MinimumWidthRequest="600">

                <Grid Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Text="Siparişler"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#8B4513"
                           HorizontalOptions="Center"
                           Margin="0,10,0,20"
                           Grid.Row="0"/>

                    <Grid Grid.Row="1" Padding="15,10" BackgroundColor="#F5E6D3" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="130"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="Masa Adı" Grid.Column="0" FontAttributes="Bold" TextColor="#8B4513" HorizontalTextAlignment="Center"/>
                        <Label Text="Toplam Fiyat" Grid.Column="1" FontAttributes="Bold" TextColor="#8B4513" HorizontalTextAlignment="Center"/>
                        <Label Text="Sipariş Durumu" Grid.Column="2" FontAttributes="Bold" TextColor="#8B4513" HorizontalTextAlignment="Center"/>
                        <Label Text="Ödeme Tipi" Grid.Column="3" FontAttributes="Bold" TextColor="#8B4513" HorizontalTextAlignment="Center"/>
                    </Grid>

                    <CollectionView x:Name="OrdersCollectionView" Grid.Row="2" Margin="0,5,0,10">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="15,12" BackgroundColor="White" ColumnSpacing="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="130"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="{Binding TableName}" Grid.Column="0" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="13"/>
                                    <Label Text="{Binding TotalPrice, StringFormat='{0:C}'}" Grid.Column="1" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="13"/>
                                    <Label Text="{Binding StatusName}" Grid.Column="2" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="13" FontAttributes="Bold"/>
                                    <Label Text="{Binding PaymentTypeName}" Grid.Column="3" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="13"/>

                                    <BoxView Grid.ColumnSpan="4" HeightRequest="1" Color="#E0E0E0" VerticalOptions="End" Margin="0,12,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Border>
        </ScrollView>
    </Grid>
</ContentPage>