<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestaurantOrderManagement.Pages.WaiterManagementPage"
             Title="" BackgroundColor="Beige">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,*" ColumnSpacing="50" WidthRequest="1000" HeightRequest="500">
        <Grid.Clip>
            <RoundRectangleGeometry Rect="0,0,1000,500" CornerRadius="20"/>
        </Grid.Clip>

        <!-- Geri DÃ¶n Butonu -->
        <Button Grid.Row="0" Grid.ColumnSpan="2" 
                Text="â† Geri DÃ¶n" 
                BackgroundColor="#FF6B6B"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="14"
                CornerRadius="8"
                WidthRequest="120"
                HeightRequest="40"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="20,10,0,10"
                Clicked="OnBackButtonClicked"/>

        <Border Grid.Row="1" Grid.Column="0" StrokeThickness="0" BackgroundColor="White">

            <VerticalStackLayout Spacing="50" Margin="0,50,0,0" >

                <HorizontalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                    <Entry WidthRequest="250"  Placeholder="Ä°sim Giriniz" x:Name="WaiterName"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">

                    <Entry WidthRequest="250"  Placeholder="KullanÄ±cÄ± adÄ± giriniz" x:Name="WaiterUsername"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Spacing="10" >

                    <Entry WidthRequest="250"  Placeholder="Åžifre Giriniz" x:Name="WaiterPassword"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout WidthRequest="400" HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">

                    <Button WidthRequest="250" Text="Garson Ekle" Clicked="OnWaiterAddedButtonClicked"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>

        </Border>

        <Border Grid.Row="1" Grid.Column="1" 
        StrokeThickness="1" 
        Stroke="#E0E0E0"
        BackgroundColor="White"
        Padding="0"
        Margin="10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>

            <Grid RowDefinitions="Auto,*" VerticalOptions="Start">

                <!-- Header -->
                <Grid Grid.Row="0" 
              ColumnDefinitions="2*,2*,2*,Auto" 
              BackgroundColor="#F5F5F5"
              Padding="15,12">
                    <Label Grid.Column="0" 
                   Text="Name" 
                   FontAttributes="Bold" 
                   FontSize="14"
                   TextColor="#333333"/>
                    <Label Grid.Column="1" 
                   Text="Username" 
                   FontAttributes="Bold" 
                   FontSize="14"
                   TextColor="#333333"/>
                    <Label Grid.Column="2" 
                   Text="Password" 
                   FontAttributes="Bold" 
                   FontSize="14"
                   TextColor="#333333"/>
                    <Label Grid.Column="3" 
                   Text="Action" 
                   FontAttributes="Bold" 
                   FontSize="14"
                   TextColor="#333333"
                   HorizontalOptions="Center"
                   Margin="10,0,0,0"/>
                </Grid>

                <!-- Data Rows -->
                <CollectionView Grid.Row="1" x:Name="WaitersList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>

                            <Border StrokeThickness="0" BackgroundColor="White" Margin="0,0,0,10" StrokeShape="RoundRectangle 12">
                                <Border.Shadow>
                                    <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.1" />
                                </Border.Shadow>

                                <Grid ColumnDefinitions="2*,2*,2*,Auto" Padding="15,15" VerticalOptions="Center">

                                    <Label Grid.Column="0" Text="{Binding name}" TextColor="#333" VerticalOptions="Center" FontAttributes="Bold"/>
                                    <Label Grid.Column="1" Text="{Binding username}" TextColor="#666" VerticalOptions="Center"/>
                                    <Label Grid.Column="2" Text="{Binding password}" TextColor="#999" VerticalOptions="Center" CharacterSpacing="2"/>

                                    <Button Grid.Column="3" Text="ðŸ—‘ï¸" 
                                    BackgroundColor="#FFEBEE" TextColor="#D32F2F"
                                    HeightRequest="35" WidthRequest="40" Padding="0" CornerRadius="8"
                                    Clicked="OnDeleteClicked"/>
                                </Grid>
                            </Border>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>
        </Border>

    </Grid>
</ContentPage>